  <body class="">
    <!-- Pushy Menu -->
    <nav class="pushy pushy-left">
      <ul class="list-unstyled">
        <li><a href="#home"><%= t "home" %></a></li>
        <li><a href="#feat"><%= t "feature_index" %></a></li>
        <li><a href="#photos"><%= t "image_index" %></a></li>
        <li><a href="#contact"><%= t "contact_index" %></a></li>
        <li><%= link_to t("help_manual_index"), pdf_readers_path, target: "_blank" %></li>
      </ul>
    </nav>
    <!-- Site Overlay -->
    <div class="site-overlay"></div>
    <header id="home">
      <div class="container-fluid">
        <!-- change the image in style.css to the class header .container-fluid [approximately row 50] -->
        <div class="container">
          <div class="row">
            <div class="col-md-3 col-xs-10">
              <a href="#" class="thumbnail logo">
                <%= image_tag "logo.png", alt: "Logo", class: "img-responsive" %>
              </a>
            </div>
            <div class="col-md-1 col-md-offset-8 col-xs-2 text-center">
              <div class="menu-btn"><span class="hamburger">&#9776;</span></div>
            </div>
          </div>
          <div class="jumbotron">
            <h1><Strong><%= t "common.base_title" %></Strong><br>
              <small><%= t "forder_index_label" %></small></h1>
            <p><%= t "forder_index_intro" %></p>
            <p><%= link_to t("header.sign_in"), new_user_session_path, class: "btn btn-lg btn-danger" %></p>
          </div>
        </div>
      </div>
    </header>
    <section id="feat">
      <div class="container">
        <div class="row features">
          <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="100ms">
            <span class="typcn typcn-pencil x3"></span>
            <h4><%= t "feature.search" %></h4>
          </div>
          <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="300ms">
            <span class="typcn typcn-camera-outline x3"></span>
            <h4><%= t "feature.order" %></h4>
          </div>
          <div class="col-md-4 text-center wow fadeInUp" data-wow-delay="500ms">
            <span class="typcn typcn-bookmark x3"></span>
            <h4><%= t "feature.shop" %></h4>
          </div>
        </div>
      </div>
    </section>
    <section id="about" class="number wow fadeInUp" data-wow-delay="300ms">
      <!-- change the image in style.css to the class .number .container-fluid [approximately row 102] -->
      <div class="container-fluid">
        <div class="container">
          <div class="row">
            <div class="col-md-6 opaline col-md-offset-6">
              <div class="row">
                <div class="col-md-offset-1 col-md-10">
                  <h3><%= t "framgia_sum_intro" %></h3>
                </div>
              </div>
              <div class="row text-center">
                <!-- set the numbers in assets/js/scripts.js  -->
                <div class="col-md-4 boxes col-xs-6 col-xs-offset-3 col-lg-4 col-lg-offset-1 col-md-offset-1 col-sm-6 wow fadeInUp">
                  <h5><%= t "framgia_sum_user" %></h5>
                  <h3 class="odometer 01">00000</h3>
                </div>
                <div class="col-md-4 boxes col-xs-6 col-xs-offset-3 col-lg-4 col-lg-offset-2 col-md-offset-2 col-sm-6 wow fadeInUp" data-wow-delay="300ms">
                  <h5><%= t "framgia_sum_products" %></h5>
                  <h3 class="odometer 02">00000</h3>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="news" class="blog wow fadeInUp" data-wow-delay="300ms">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h2><%= t "index.intro_search.title" %></h2>
            <p><%= t "index.intro_search.context" %></p>
          </div>
          <div class="col-md-5">
            <a href="#">
              <img src="assets/draft/search-page.png" alt="" class="img-responsive">
            </a>
          </div>
        </div>
      </div>
    </section>
    <section id="news" class="blog wow fadeInUp" data-wow-delay="300ms">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <img src="assets/draft/order-page.png" alt="" class="img-responsive">
          </div>
          <div class="col-md-7">
              <h2><%= t "index.intro_order.title" %></h2>
              <p><%= t "index.intro_order.context" %></p>
          </div>
        </div>
      </div>
    </section>
    <section id="news" class="blog wow fadeInUp" data-wow-delay="300ms">
      <div class="container">
        <div class="row">
          <div class="col-md-7">
            <h2><%= t "index.intro_shop.title" %></h2>
            <p><%= t "index.intro_shop.context" %></p>
          </div>
          <div class="col-md-5">
            <a href="#">
              <img src="assets/draft/shop-page.png" alt="" class="img-responsive">
            </a>
          </div>
        </div>
      </div>
    </section>
    <section id="history" class="story wow fadeInUp" data-wow-delay="300ms">
      <!-- change the image in style.css to the class .story .container-fluid [approximately row 141] -->
      <div class="container-fluid">
        <div class="container">
          <div class="row">
            <div class="col-md-6 opaline">
              <div class="row">
                <div class="col-md-10 col-md-offset-1">
                  <p class="lead"><i><%= t "framgia_user_feedback_index" %></i></p>
                  <p><i><%= t "framgia_user_feedback_context" %></i></p>
                  <h6 class="lead"><%= t "framgia_user_name_feedback" %></h6>
                  <p><small><%= t "framgia_user_job_feedback" %><br></small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section id="photos" class="gallery wow fadeInUp" data-wow-delay="300ms">
      <div class="container">
        <div class="row">
          <div class="masonry image-gallery">
            <div class="grid-sizer"></div>
            <div class="gutter-sizer"></div>
            <div class="item item-width2">
              <%= image_tag "cua-hoang-kim.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "thai_food.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "coffe_banner.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "nuoc-dua.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "tau_hu.jpg" %>
            </div>
            <div class="item">
              <%= image_tag "banh_my.jpg" %>
            </div>
            <div class="item item-width2">
              <%= image_tag "nem-chua-ran.jpg" %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="clients wow fadeInUp" data-wow-delay="300ms">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <%= image_tag "logo-sample-01.jpg" , class: "img-responsive" %>
          </div>
          <div class="col-md-2">
            <%= image_tag "logo-sample-02.jpg" , class: "img-responsive" %>
          </div>
          <div class="col-md-2">
            <%= image_tag "logo-sample-03.png" , class: "img-responsive" %>
          </div>
          <div class="col-md-2">
            <%= image_tag "logo-sample-04.jpg" , class: "img-responsive" %>
          </div>
          <div class="col-md-2">
            <%= image_tag "logo-sample-05.jpg" , class: "img-responsive" %>
          </div>
          <div class="col-md-2">
            <%= image_tag "logo-sample-06.jpg" , class: "img-responsive" %>
          </div>
        </div>
      </div>
    </section>
    <section id="contact" class="prefooter wow fadeInUp" data-wow-delay="300ms">
      <!-- change the image in style.css to the class .prefooter .container-fluid [approximately row 154] -->
      <div class="container-fluid">
        <div class="container">
          <div class="row">
            <div class="col-md-8">
              <h3><%= t "about_label" %></h3>
              <p><%= t "com-detail" %></p>
              <div class="row">
                <div class="col-md-6">
                  <%= link_to t("feed_back"), Settings.feedback, target: "_blank",
                    class: "btn btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <h3><%= t "framgia_label" %></h3>
            <p><%= t "framgia_company_copyright" %></p>
          </div>
          <div class="col-md-9">
            <p class="text-right social"><i class="typcn typcn-social-facebook-circular"></i><i class="typcn typcn-social-twitter-circular"></i><i class="typcn typcn-social-tumbler-circular"></i><i class="typcn typcn-social-github-circular"></i><i class="typcn typcn-social-dribbble-circular"></i></p>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://netdna.bootstrapcdn.com/twitter-bootstrap/2.0.4/js/bootstrap-scrollspy.js"></script>
    <script src="https://unpkg.com/masonry-layout@4.1/dist/masonry.pkgd.js"></script>
  </body>