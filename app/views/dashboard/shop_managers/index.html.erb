<h1 class="text-center"></h1>
<div class="row">
  <div class="row">
    <div class="search-user-form">
      <div class="search_users col-md-6 col-md-offset-3">
        <%= form_tag new_search_path, method: :get, id: "search_owner_form", remote: true do %>
          <%= hidden_field_tag :shop_id, @support.shop_manager.shop_id %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search],
              placeholder: t("dashboard.order.btn_search") << "...", class: "form-control" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-offset-2 col-md-8 col-md-offset-2">
    <div class="panel panel-success">
      <div class="add-user-table">
        <table class="table table-striped table-hover table-bordered">
          <thead class="">
          <tr>
            <th></th>
            <th class="td-user-name-table"><%= t "admin.users.index.name" %></th>
            <th class="td-user-action-table"><%= t "admin.users.index.actions" %></th>
          </tr>
          </thead>
          <tbody id="list_users">
          <%= render "dashboard/shop_managers/users" %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
