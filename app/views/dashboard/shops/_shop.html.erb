<div class="col-sm-4 row block-shop-feed-item2 padding-l div-item">
  <div class="col-md-4 shop_image">
    <div class="row thumbnail shop_width">
      <% if shop.domains.present? && @domain.present? %>
        <%= link_to domain_dashboard_shop_path(@domain, shop) do %>
          <%= image_tag shop.avatar.url, class: "image-shop-show" %>
        <% end %>
      <% else %>
        <%= link_to dashboard_shop_path(shop, domain_id: Settings.not_find) do %>
          <%= image_tag shop.avatar.url, class: "image-shop-show" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-md-8 shop_text">
    <div class="row">
      <h3>
        <% if shop.domains.present? && @domain.present? %>
          <%= link_to shop.name, domain_dashboard_shop_path(@domain, shop) %>
        <% else %>
          <%= link_to shop.name, dashboard_shop_path(shop, domain_id: Settings.not_find) %>
        <% end %>
      </h3>
      <%= render "shared/shop_status_label", shop: shop %>
      <input id="shop-average-rating" type="number"
        class="rating-loading star-rating" data-size="sm"
        value=<%= shop.averate_rating %> >
      <div class="description quote"><p><%= shop.description %></p></div>
      <% if @domain.present? %>
        <div><h4><%= t "request_shop.domain" %><%= @domain.name %></h4></div>
        <% if shop.in_domain? @domain %>
          <div><h3><%= t "request_shop.already" %></h3></div>
        <% else %>
          <div class="request-status">
            <% if shop.requested? @domain %>
              <span class="btn btn-warning">
                <%= shop.request_status @domain %>
              </span>
            <% else %>
              <%= form_for @request do |f| %>
                <%= f.hidden_field :domain_id, value: @domain.id %>
                <%= f.hidden_field :shop_id, value: shop.id %>
                <%=  f.submit t("request_shop.request_to_domain"), 
                  class: "btn btn-primary btn-info refresh" %>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
